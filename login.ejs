<head>

    <meta charset="UTF-8">
    <title>Passport.JS & BCrypt Test- Login</title>
  
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  
  </head>
  
  <body>
  
    <div class="container">
  
      <br>
  
      <!-- Jumbotron -->
      <div class="jumbotron">
        <h1 class="text-center">Passport.JS & BCrypt Test- Login</h1>
      </div>
  
      <div class="row">
  
        <!-- Sign-Up Card-->
        <div class="col-lg-6">
          <div class="card card-default">
            <div class="card-header">
              Employee Login
            </div>
            <div class="card-body">
  
              <!-- Sign-up Form (note the various input "types")-->
              <form role="form">
                <div class="form-group row">
                  <label for="name-input">Employee ID:</label>
                  <input class="form-control" id="name-input" type="text">
                </div>
                <div class="form-group row">
                  <label for="age-input">Truck Number:</label>
                  <input class="form-control" id="age-input" type="number">
                </div>
                <div class="form-group row">
                  <label for="password-input">Password:</label>
                  <input class="form-control" id="password" type="password">
                </div>
                <button action="POST" type="submit">Log In</button>
              </div>
        </div>
  
        
  
      </div>
  
    </div>
  
    <a href="/register">Register</a><br>
    
  
  
  
  </body>
  